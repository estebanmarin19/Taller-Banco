  <link rel="stylesheet" href="./css/estiloregistro.css">
  <title>Cuentas</title>
</head>
<body>
    <header class="header2">
        
        <nav class="menu2">
            <ul>
                <li><a href="vempleados">Inicio</a></li>
                <li><a href="cerrar">Cerrar Sesion</a></li>
    
            </ul>
        </nav>
        
    </div>
    
  </header>
    <form action="/frminsertarcuentas" method="POST" class="form-register animated fadeInDown">
        <h1>Formulario Registro Cuentas</h1>
       

        <input class="forprincipal" type="text" name="codcuenta" placeholder="Codigo Cuenta" autofocus>
        <input class="forprincipal" type="text" name="doccli" placeholder="Documento Cliente" autofocus>
        <input class="forprincipal" type="text" name="tipocuenta" placeholder="Tipo de Cuenta" autofocus>
        <input class="forprincipal" type="number" name="saldo" placeholder="Saldo" autofocus>
        <button class="botons" type="submit">Registrar</button>
        <p><a href="#">Â¿Ya tengo Cuenta?</a></p>
        
    </form>
  <br>
  <br>
<form action="" name="frm" id="frm">
  <table > 
    
    <thead>
        
        <tr>
            
            <th>Codigo Cuenta</th>
            <th>Documento Cliente</th>
            <th>Tipo de Cuenta</th>
            <th>Saldo</th>
            <th>Eliminar</th>
            
        </tr>
    </thead>
    <tbody>
        <% datos.forEach(function (datos){ %>
    <tr>
        <td><input type="text" value="<%=datos.codcuenta%>" name="codcuenta" id="cod" class="cod" ></td>
        <td><input type="text" value="<%=datos.doccli%>" name="doccli" id="doc" class="doc"></td>
        <td><input type="text" value="<%=datos.tipocuenta%>" name="tipocuenta" id="tipo" class="tipo"></td>
        <td><input type="text" value="<%=datos.saldo%>" name="saldo" id="sal" class="sal"></td>
        <td><input type="submit" value="Eliminar" id="btneli" class="btneli"></td>
        
    </tr>
        <%})%>
    </tbody>
    </table>
    </form>


</body>
</html>
