<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script src="./js/jquery-3.6.0.min.js"></script>
  <script src="./js/actlineas.js"></script>
  <script src="./js/elilineas.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
  
  <link rel="stylesheet" href="./css/estiloregistro.css">
  <title>Lineas de Credito</title>
</head>
<body>
    <header class="header2">
        
        <nav class="menu2">
            <ul>
                <li><a href="vempleados">Inicio</a></li>
                <li><a href="cerrar">Cerrar Sesion</a></li>
    
            </ul>
        </nav>
        
    </div>
    
  </header>
  
    <form action="/frminsertarli" method="POST" class="form-register animated fadeInDown">
        <h1>Formulario Registro Lineas</h1>
        <input class="forprincipal" type="text" name="codlinea" placeholder="Codigo" autofocus>
        <input class="forprincipal" type="text" name="nomlinea" placeholder="Nombre" autofocus>
        <input class="forprincipal" type="number" name="montomaxicredito" placeholder="Monto Maximo" autofocus>
        <input class="forprincipal" type="number" name="plazomaxcred" placeholder="Plazo Maximo" autofocus>
        <button class="botons" type="submit">Registrar</button>
        <p><a href="#">Â¿Ya tengo Cuenta?</a></p>
        
    </form>
  <br>
  <br>
<form action="" name="frm" id="frm">
  <table > 
    
    <thead>
        
        <tr>
            
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Monto Maximo</th>
            <th>Plazo Maximo</th>
            <th>Actualizar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        <% datos.forEach(function (datos){ %>
    <tr>
        <td><input type="text" value="<%=datos.codlinea%>" name="codlinea" id="cod" class="cod" ></td>
        <td><input type="text" value="<%=datos.nomlinea%>" name="nomlinea" id="nom" class="nom"></td>
        <td><input type="text" value="<%=datos.montomaxicredito%>" name="montomaxicredito" id="mont" class="mont"></td>
        <td><input type="text" value="<%=datos.plazomaxcred%>" name="plazomaxcred" id="plazo" class="plazo"></td>
        <td><input type="submit" value="Actualizar" id="btnact" class="btnact"></td>
        <td><input type="submit" value="Eliminar" id="btneli" class="btneli"></td>
    </tr>
        <%})%>
    </tbody>
    </table>
    </form>


</body>
</html>