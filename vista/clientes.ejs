    </form>
  <br>
  <br>
<form action="" name="frm" id="frm">
  <table > 
    
    <thead>
        
        <tr>
            
            <th>Documento</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Celular</th>
            <th>Sexo</th>
            <th>Nacimiento</th>
            <th>Actualizar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        <% datos.forEach(function (datos){ %>
    <tr>
        <td><input type="text" value="<%=datos.doccli%>" name="doccli" id="doc" class="doc" ></td>
        <td><input type="text" value="<%=datos.nomcli%>" name="nomcli" id="nom" class="nom"></td>
        <td><input type="text" value="<%=datos.apecli%>" name="apecli" id="ape" class="ape"></td>
        <td><input type="text" value="<%=datos.correocli%>" name="correocli" id="corr" class="corr"></td>
        <td><input type="text" value="<%=datos.celulra%>" name="celulra" id="cel" class="cel"></td>
        <td><input type="text" value="<%=datos.sexo%>" name="sexo" id="sex" class="sex"></td>
        <td><input type="text" value="<%=datos.fechanaccli%>" name="fechanaccli" id="fec" class="fec"></td>
        <td><input type="submit" value="Actualizar" id="btnact" class="btnact"></td>
        <td><input type="submit" value="Eliminar" id="btneli" class="btneli"></td>
    </tr>
        <%})%>
    </tbody>
    </table>
    </form>


</body>
