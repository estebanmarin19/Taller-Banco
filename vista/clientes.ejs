    <form action="/frminsertarcli" method="POST" class="form-register animated fadeInDown">
        <h1>Formulario Registro Clientes</h1>
        <input class="forprincipal" type="text" name="doccli" placeholder="Documento" autofocus>
        <input class="forprincipal" type="text" name="nomcli" placeholder="Nombre" autofocus>
        <input class="forprincipal" type="text" name="apecli" placeholder="Apellido" autofocus>
        <input class="forprincipal" type="text" name="correocli" placeholder="Correo" autofocus>
        <input class="forprincipal" type="text" name="celulra" placeholder="Celular" autofocus>
        <input class="forprincipal" type="text" name="sexo" placeholder="Sexo">
        <input class="forprincipal" type="date"name="fechanaccli" placeholder="Nacimiento">
        <button class="botons" type="submit">Registrar</button>
